{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension (alongside Rust Analyzer)",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--install-extension rust-lang.rust-analyzer --force", "--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "preLaunchTask": "${defaultBuildTask}",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Run Extension (without Rust Analyzer)",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--disable-extensions", "--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "preLaunchTask": "${defaultBuildTask}",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Run Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/test/suite/index"
      ],
      "outFiles": ["${workspaceFolder}/out/test/**/*.js"],
      "preLaunchTask": "Pretest",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
